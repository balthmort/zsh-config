#
# User-specific aliases

alias pacman='PACMAN=/usr/bin/pacman; [ -f /usr/bin/pacman-color ] && PACMAN=/usr/bin/pacman-color; sudo $PACMAN'
alias poweroff='systemctl poweroff'

alias fit-mount='sshfs xstane32@merlin.fit.vutbr.cz:/homes/eva/xs/xstane32 ~/system/fitmount'
alias fit-umount='fusermount -u ~/system/fitmount'

alias speaker-unmute='amixer -c 0 set Speaker 100% unmute &>/dev/null'
alias speaker-mute='amixer -c 0 set Speaker 0% mute &>/dev/null'

alias minecraft='java -jar ~/games/bin/MinecraftSP.jar'

alias vimide='vim +NERDTree +TagbarOpen'

# Suffix aliases
alias -s php='php -f'
alias -s odt='oowriter &'
alias -s pdf='okular &'
